{
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.arguments": ["-log=verbose", 
                         "-pretty", 
                         "--background-index",
                        "-compile-commands-dir=${workspaceFolder}/build/Debug"],
    "clangd.fallbackFlags": [
        "-isystem${workspaceFolder}/src",
        "-isystem${workspaceFolder}/include",
        "-isystem${workspaceFolder}/tests",
        "-isystem${workspaceFolder}/build/Debug/_deps/catch2-build/generated-includes",
        "-isystem${workspaceFolder}/libs/catch2/install/Debug/include",
        "-isystem${workspaceFolder}/build/Debug/_deps/tsl-robin-map-src/include",
        "-isystem${workspaceFolder}/libs/robin-map/install/Debug/include",
        "-isystem${workspaceFolder}/build/Debug/_deps/cereal-src/include",
        "-isystem${workspaceFolder}/libs/cereal/include"
    ],
}